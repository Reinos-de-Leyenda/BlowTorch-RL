<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/window_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <es.reinosdeleyenda.flamethrower_lib.window.NoTouchActionBar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop = "true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
		android:title=""
        />
    
    <LinearLayout
        android:id="@+id/inputbar"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
    <ImageButton
    	android:id="@+id/foldout"
    	android:layout_width="40dip"
    	android:layout_height="20dip"
    	android:background="#0A0A0A"
    	android:src="@drawable/sliderwidgetout"
    	android:textSize="16sp"
    	android:typeface="monospace"
    	android:textColor="#9999FF"
    	android:text="|DOWN|"/>
    
    <es.reinosdeleyenda.flamethrower_lib.window.BetterEditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight = "20dip"
    android:textSize="16sp"
    android:typeface="monospace"
    android:textColor="#9999FF"
    android:textColorHighlight="#555555"
    android:background="@drawable/input_bar_bg"
    android:candidatesTextStyleSpans=""
    android:editable="true"
    android:layout_marginLeft="3sp"
    android:id="@+id/textinput"
    android:nextFocusUp = "@id/textinput"
    android:nextFocusDown = "@id/textinput"
    android:nextFocusLeft = "@id/textinput"
    android:nextFocusRight = "@id/textinput"
    android:isScrollContainer = "false"
    android:keepScreenOn = "true"
    android:imeOptions = "actionSend"
    android:maxLines = "8"
    android:inputType = "textMultiLine"/>
    


    </LinearLayout>
    
       <View
        android:layout_height="3dip"
        android:layout_width="fill_parent"
        android:layout_above="@id/inputbar"
        android:id="@+id/divider"
        android:background="#FF444488"/>



